<resources>

    <!--NEU-->

    <style name="Widget.Neumorph.CardView" parent="android:Widget">
        <item name="android:padding">@dimen/design_default_shadow_padding</item>
        <item name="neumorph_shadowElevation">3dp</item>
        <item name="neumorph_shadowColorLight">?colorShadowLight</item>
        <item name="neumorph_shadowColorDark">?colorShadowDark</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/ShapeAppearance.Neumorph.CardView</item>
    </style>


    <style name="ShapeAppearance.Neumorph.CardView" parent="">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/design_default_corner_radius</item>
    </style>

    <!--EOF NEU-->


    <style name="TitleBigText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/text_size_medium_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/shadow_light</item>
        <item name="android:layout_height">@dimen/common_40_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/common_5_dp</item>
        <item name="android:paddingRight">@dimen/common_5_dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>


    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/shadow_light</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

</resources>
