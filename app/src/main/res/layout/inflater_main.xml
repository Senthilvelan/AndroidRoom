<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inflaterMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/bg_gradient_start"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:background="@android:color/white"
        android:elevation="3dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:padding="@dimen/common_5_dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_like"></ImageView>


            <TextView
                android:id="@+id/textViewName"
                style="@style/TitleBigText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_20_dp"
                android:paddingTop="@dimen/common_2_dp"
                android:paddingRight="@dimen/common_20_dp"
                android:paddingBottom="@dimen/common_5_dp"

                android:text="test"
                android:textColor="@color/text_color_green"
                android:textStyle="normal"></TextView>

            <TextView
                android:id="@+id/textViewEmail"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_20_dp"
                android:paddingTop="@dimen/common_2_dp"
                android:paddingRight="@dimen/common_20_dp"
                android:paddingBottom="@dimen/common_5_dp"
                android:text="test"
                android:textColor="@color/text_color_green"
                android:textStyle="normal"></TextView>

            <TextView
                android:id="@+id/textViewColor"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_20_dp"
                android:paddingTop="@dimen/common_2_dp"
                android:paddingRight="@dimen/common_20_dp"
                android:paddingBottom="@dimen/common_5_dp"
                android:text="test"
                android:textColor="@color/text_color_green"
                android:textStyle="normal"></TextView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--
        </com.sen.cooey.widget.NeumorphCardView> -> leads out of memory when using with swipeview
    -->

</LinearLayout>


