<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inflaterLikeMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/bg_gradient_start"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_10_dp"
    android:paddingRight="@dimen/common_10_dp">


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:background="@android:color/white"
        android:elevation="3dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="@dimen/common_2_dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_like"></ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewName"
                    style="@style/TitleBigText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common_2_dp"
                    android:paddingTop="@dimen/common_2_dp"
                    android:paddingRight="@dimen/common_2_dp"
                    android:paddingBottom="@dimen/common_2_dp"

                    android:text="test"
                    android:textColor="@color/text_color_green"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/textViewEmail"
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common_2_dp"
                    android:paddingTop="@dimen/common_2_dp"
                    android:paddingRight="@dimen/common_2_dp"
                    android:paddingBottom="@dimen/common_2_dp"
                    android:text="test"
                    android:textColor="@color/text_color_green"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/textViewColor"
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common_2_dp"
                    android:paddingTop="@dimen/common_2_dp"
                    android:paddingRight="@dimen/common_2_dp"
                    android:paddingBottom="@dimen/common_2_dp"
                    android:text="test"
                    android:textColor="@color/text_color_green"
                    android:textStyle="normal"></TextView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--
        </com.sen.cooey.widget.NeumorphCardView> -> leads out of memory when using with swipeview
    -->

</LinearLayout>


